{
    "extensions": [
        "php"
    ],
    "excludes": [
        "vendor",
        "storage",
        "bootstrap/cache",
        "node_modules"
    ],
    "report": {
        "html": "artifacts/phpmetrics/",
        "csv": "artifacts/phpmetrics/report.csv",
        "json": "artifacts/phpmetrics/report.json",
        "violations": "artifacts/phpmetrics/violations.xml"
    },
    "complexity": {
        "cyclomaticComplexity": 5,
        "cognitiveComplexity": 5,
        "maintainabilityIndex": 85,
        "halsteadComplexity": true,
        "intelligentComplexity": true
    },
    "coupling": {
        "afferentCoupling": 5,
        "efferentCoupling": 5,
        "instability": 0.5,
        "abstractness": 0.5,
        "depthOfInheritance": 3
    },
    "size": {
        "loc": 500,
        "ncloc": 400,
        "commentLines": 100,
        "logicalLoc": 300
    },
    "quality": {
        "bugs": 0,
        "vulnerabilities": 0,
        "codeSmells": 0,
        "duplicatedLines": 5,
        "duplicatedBlocks": 0,
        "duplicatedFiles": 0
    },
    "coverage": {
        "lineCoverage": 80,
        "branchCoverage": 70
    },
    "documentation": {
        "commentLines": 20
    },
    "architecture": {
        "layers": [
            "Controllers",
            "Models",
            "Services",
            "Middleware",
            "Commands",
            "Providers",
            "Helpers"
        ]
    }
}
